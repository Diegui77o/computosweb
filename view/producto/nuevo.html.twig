{% extends 'layout/sistema.html.twig' %}
{% block head %}
  {# Plugin datepicker #}
  <link rel="stylesheet" type="text/css" href="../public/datepicker/jquery-ui.min.css">
{% endblock %}
{% block contenido %}
{# div necesario para que la vista se ajuste (no lleva cierre porque lo cierra la vista base) #}
<div class="container marketing">

    <div class="panel panel-default">
      <div class="panel-heading"><center><i class="fa fa-shopping-cart" aria-hidden="true"></i> Nuevo <b>producto</b></center></div>
      <div class="panel-body">
        <form method="post" action="../controller/producto-new.php">
  		  {% if msjError == true %}
  			<div class="alert alert-dismissible alert-danger">
  				<button type="button" class="close" data-dismiss="alert">&times;</button>
  				<strong>¡Error!</strong> {{msj}}
  			</div>
  		  {% elseif msjExito == true %}
  			<div class="alert alert-dismissible alert-success">
  				<button type="button" class="close" data-dismiss="alert">&times;</button>
  				<strong>¡Exito!</strong> {{msj}}
  			</div>
  		  {% endif %}

      <div class="col-md-12">
        <div class="row">
          <div class="col-md-6">
          <div class="form-group">
            <label class="control-label">Nombre *</label>
            <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Ingrese nombre del producto" data-validation="length required" data-validation-length="3-100" data-validation-error-msg="El nombre del producto debe contener [3-100 caracteres]." title="Ej: Resma Papel A4, Memoria Ram 4 GB DDR3">
          </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label class="control-label">Marca *</label>
              <input class="form-control" type="text" name="marca" id="marca" data-validation="length required" data-validation-length="3-45" maxlength="45" data-validation-error-msg="La marca del producto debe contener [3-45 caracteres]." placeholder="Ingrese marca del producto" title="Ej: GTC Ribbon, DGM">
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-12">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label class="control-label">Stock mínimo *</label>
              <input class="form-control" type="text" name="stock_minimo" placeholder="Ingrese el stock mínimo" data-validation="number">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label class="control-label">Fecha alta *</label>
              <input class="form-control" type="text" name="fecha_alta" id="fecha_alta" data-validation="birthdate" data-validation-format="dd-mm-yyyy" placeholder="Ingrese fecha alta del producto" data-validation-help="Formato dd-mm-yyyy">
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
          <label class="control-label">Descripción * (<span id="des-max-length">255</span> caracteres restantes)</label>
          <textarea class="form-control" name="descripcion" id="descripcion" placeholder="Ingrese una breve descripción del producto." row="6" maxlength="255" data-validation="length required" data-validation-length="1-255" data-validation-error-msg="La descripción debe contener [1-255 caracteres]."></textarea>
        </div>
      </div>

      <div class="col-md-12">
      <div class="form-group">
        <div class="row">
          <div class="col-md-6">
            <span class="help-block">Los campos con * son necesarios completarlos.</span>
            <span class="help-block"><p class="text-danger">¡Por favor! verficar los datos antes de enviarlos.</p></span>
            <button type="submit" class="btn btn-outline btn-primary">Enviar</button>
          </div>
        </div>
      </div>
      </div>
    </form>
  </div>
</div>{# div panel #}
{% endblock %}
{% block plugins %}
{# Plugin Form-validator #}
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery-form-validator/2.3.26/jquery.form-validator.min.js"></script>
{# Plugin datepicker #}
<script type="text/javascript" src="../public/datepicker/js/jquery-ui.min.js"></script>
<script>
	// Form-validator
	$.validate({
		lang : 'es',
		modules : 'location, date, security, file',
		onModulesLoaded : function() {
			$('#country').suggestCountry();
		}
	});

  // Restringe la longitud de la descripción
  $('#descripcion').restrictLength($('#des-max-length'));
</script>
<script>
  // Autocompletado de nombres de productos
  var availableTags = [ "Tóner", "Resma Papel Oficio", "Resma Papel A4", 
      "Resma Papel Troquelado", "Teclado", "Mouse", "Parlantes PC", 
      "Disco Rigido", "CD-R", "DVD-R", "Fuente ATX", "Memoria Ram",
      "Procesador", "Microfono", "Teléfono Celular", "Teléfono Fijo",
      "Camara Web" ];
  $("#nombre").autocomplete({
    source : availableTags
  });

  // Autocompletado de marcas de productos
  var availableTags = [ "Autor", "Boreal", "Report", "Troquelado",
      "Genius", "Kolke", "SFX", "PCBOX", "Western Digital", "Samsung",
      "Verbatim", "Ridata", "Kelix", "Over", "GTC Ribbon", "DGM", "Grand",
      "AmeriPrint","AMD", "Intel", "Kingston", "Avant" ];
  $("#marca").autocomplete({
    source : availableTags
  });
  // Datepicker
  jQuery.datepicker.regional['es'] = {
    closeText : 'Cerrar',
    prevText : '<- Ant',
        nextText: 'Sig ->',
    currentText : 'Hoy',
    changeMonth: true,
    changeYear: true,
    yearRange:"-10y:+10y",
    monthNames : [ 'Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio',
        'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre',
        'Diciembre' ],
    monthNamesShort : [ 'Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul',
        'Ago', 'Sep', 'Oct', 'Nov', 'Dic' ],
    dayNames : [ 'Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves',
        'Viernes', 'Sábado' ],
    dayNamesShort : [ 'Dom', 'Lun', 'Mar', 'Mié', 'Juv', 'Vie', 'Sáb' ],
    dayNamesMin : [ 'Do', 'Lu', 'Ma', 'Mi', 'Ju', 'Vi', 'Sá' ],
    weekHeader : 'Sm',
    dateFormat : 'dd/mm/yy',
    firstDay : 1,
    isRTL : false,
    showMonthAfterYear : false,
    yearSuffix : ''
  };
  $.datepicker.setDefaults($.datepicker.regional['es']);

  $("#fecha_alta").datepicker({
    dateFormat : 'dd-mm-yy',
    showAnim : 'show',
    showButtonPanel : true
  }).val();
</script>
{% endblock %}